FloatLayout:

    MDSlider:
        id: myslider
        min: 0
        max: 255
        value: 127
        hint: False
        on_touch_up: app.slider_function(self.value)


    MDLabel:
        text: "speed: %s" % int(myslider.value)
        halign: "center"
        size_hint: .5, .5
        pos_hint: {"center_x": .5, "center_y": .7}